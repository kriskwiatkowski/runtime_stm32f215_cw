{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 13,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base",
            "generator": "Ninja",
            "hidden": true,
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "toolchainFile": "toolchains/gcc-armv7_m-unknown-none-eabi.toolchain",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/${presetName}",
                "EXTRA_C_FLAGS": "-DSTM32F2 -DSTM32"
            }
        },
        {
            "name": "stm32f215_cw",
            "inherits": "base",
            "displayName": "ARMv7-M Release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "stm32f215_cw-minsizerel",
            "inherits": "base",
            "displayName": "ARMv7-M MinSizeRel",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "MinSizeRel"
            }
        },
        {
            "name": "stm32f215_cw-reldebinfo",
            "inherits": "base",
            "displayName": "ARMv7-M RelWithDebInfo",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "base",
            "hidden": true,
            "targets": [
                "all",
                "install"
            ]
        },
        {
            "name": "stm32f215_cw",
            "configurePreset": "stm32f215_cw",
            "inherits": "base"
        },
        {
            "name": "stm32f215_cw-minsizerel",
            "configurePreset": "stm32f215_cw-minsizerel",
            "inherits": "base"
        },
        {
            "name": "stm32f215_cw-reldebinfo",
            "configurePreset": "stm32f215_cw-reldebinfo",
            "inherits": "base"
        }
    ],
    "packagePresets": [
        {
            "name": "stm32f215_cw",
            "configurePreset": "stm32f215_cw",
            "packageDirectory": "${sourceDir}/out/package/${presetName}"
        },
        {
            "name": "stm32f215_cw-minsizerel",
            "configurePreset": "stm32f215_cw-minsizerel",
            "packageDirectory": "${sourceDir}/out/package/${presetName}"
        },
        {
            "name": "stm32f215_cw-reldebinfo",
            "configurePreset": "stm32f215_cw-reldebinfo",
            "packageDirectory": "${sourceDir}/out/package/${presetName}"
        }
    ]
}